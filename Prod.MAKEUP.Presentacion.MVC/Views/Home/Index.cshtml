
@using Release.Helper.WebKoMvc.Extensions

<ol class="breadcrumb">
    <li class="active">Inicio</li>
</ol>
<div class="jumbotron banner-principal">
    <div class="container">
        <h1>Bienvenido</h1>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-search fa-5x icon-acceso"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">Búsqueda y Registro de Comprobantes de Pago.</div>
                    </div>
                </div>
            </div>
            <a href="@Html.ResourcePath("Comprobante/Index")">
                <div class="panel-footer">
                    <span class="pull-left">Ingresar</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-sm-6" id="div_prestamo">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-pencil-square-o fa-5x icon-acceso"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">Registro de Préstamos de Comprobantes de Pago.</div>
                    </div>
                </div>
            </div>
            <a href="@Html.ResourcePath("Prestamo/Index")">
                <div class="panel-footer">
                    <span class="pull-left">Ingresar</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-6 col-xsx-6">
                <div class="serviceBox">
                    <div class="service-icon">
                        <span><i class="fa fa-id-card-o"></i></span>
                    </div>
                    <div class="service-content">
                        <h3 class="title">CURSOS</h3>
                        <p class="description">We design beautifull responsive websites that works on every device. </p>
                        <a href="@Html.ResourcePath("Curso/Index")" class="read-more fa fa-plus" data-toggle="tooltip" title="Read More"></a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 col-xsx-6">
                <div class="serviceBox green">
                    <div class="service-icon">  
                        <span><i><img src="~/images/icon-user.png" /></i></span>
                    </div>
                    <div class="service-content">
                        <h3 class="title">TALLERES</h3>
                        <p class="description">We develop web app with modern technologies to ensure secure webiste. </p>
                        <a href="@Html.ResourcePath("Taller/Index")" class="read-more fa fa-plus" data-toggle="tooltip" title="Read More"></a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 col-xsx-6">
                <div class="serviceBox orange">
                    <div class="service-icon">
                        <span><i class="fa fa-tablet"></i></span>
                    </div>
                    <div class="service-content">
                        <h3 class="title">TIPS</h3>
                        <p class="description">We develop customised Invoice / Billing Softwares as per client requirements.</p>
                        <a href="@Html.ResourcePath("Tip/Index")" class="read-more fa fa-plus" data-toggle="tooltip" title="Read More"></a>
                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-6 col-xsx-6">
                <div class="serviceBox blue">
                    <div class="service-icon">
                        <span><i class="fa fa-shopping-cart"></i></span>
                    </div>
                    <div class="service-content">
                        <h3 class="title">TUTORIALES</h3>
                        <p class="description">Our powerful ecommerce software gives you all the features you need to build an online store</p>
                        <a href="@Html.ResourcePath("Tutorial/Index")" class="read-more fa fa-plus" data-toggle="tooltip" title="Read More"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Html.InitPageMainModule("views/home/index")
}
